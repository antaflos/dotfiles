[user]
    name = Andreas Ntaflos
    email = andreas.ntaflos@rise-world.com
[push]
    default = simple
[http]
    sslVerify = true
[core]
    askpass = /usr/bin/ksshaskpass
[alias]
    branches = branch -a
    tags = tag
    stashes = stash list
    unstage = reset -q HEAD --
    discard = checkout --
    uncommit = reset --mixed HEAD~
    amend = commit --amend
    graph = log --graph -10 --branches --remotes --tags  --format=format:'%Cgreen%h %Cresetâ€¢ %<(75,trunc)%s (%cN, %cr) %Cred%d' --date-order
    precommit = diff --cached --diff-algorithm=minimal -w
